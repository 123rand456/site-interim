---
import MainLayout from '../../layouts/MainLayout.astro';
import PageMetadata from '../../components/PageMetadata.astro';
import { Content, frontmatter } from './example-essay.md';

const metadata = {
  title: frontmatter.title,
  description: frontmatter.description,
  dateCreated: frontmatter.dateCreated,
  dateUpdated: frontmatter.dateUpdated,
  confidence: frontmatter.confidence,
  importance: frontmatter.importance,
  tags: frontmatter.tags,
};
---

<MainLayout title={metadata.title} description={metadata.description}>
  <h1 class="text-4xl font-bold mb-4 text-center">{metadata.title}</h1>
 
  <div class="mb-8">
    <PageMetadata {...metadata} />
  </div>
  <div class="prose dark:prose-invert max-w-none">
    <Content />
  </div>
</MainLayout>
