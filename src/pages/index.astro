---
// Welcome to Astro! Everything between these triple-dash code fences
// is your "component frontmatter". It never runs in the browser.

import MainLayout from '../layouts/MainLayout.astro';
import { base } from '../utils/constants';

const posts = await Promise.all(
  Object.entries(import.meta.glob('./essays/*.md'))
    .map(async ([_, post]) => {
      const resolvedPost = await post() as { url: string; frontmatter: { date: string; title: string; description: string } };
      return {
        url: resolvedPost.url,
        frontmatter: resolvedPost.frontmatter
      };
    })
);

// Precompute most recent date for each post for optimized sorting
const postsWithDate = posts.map(post => {
  const fm = post.frontmatter as { date?: string; dateCreated?: string; dateUpdated?: string };
  const dateStr = fm.dateUpdated ?? fm.dateCreated ?? fm.date;
  return {
    ...post,
    _sortDate: dateStr ? new Date(dateStr).getTime() : 0
  };
});

const recentEssays = postsWithDate
  .sort((a, b) => b._sortDate - a._sortDate)
  .slice(0, 3);
---

<MainLayout>
  <section class="mb-16">
    <h1 class="text-4xl font-bold mb-4">ルールで名乗ることはできない事になっています</h1>
    <p class="text-xl text-gray-600 dark:text-gray-400">
      This is a collection of essays and research on technology, science, philosophy, and other topics that interest me. 
      Oh, and insight porn too.
    </p>
  </section>

  <section class="mb-16">
    <h2 class="text-2xl font-bold mb-8">Recent Essays</h2>
    <div class="space-y-8">
      {recentEssays.map(essay => (
        <article class="border-b border-gray-200 dark:border-gray-700 pb-8">
          <h3 class="text-xl font-semibold mb-2">
            <a href={essay.url} class="hover:text-blue-600 dark:hover:text-blue-400">
              {essay.frontmatter.title}
            </a>
          </h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            {essay.frontmatter.description}
          </p>
          <div class="text-sm text-gray-500 dark:text-gray-500">
            {(() => {
              const fm = essay.frontmatter as { date?: string; dateCreated?: string; dateUpdated?: string; title: string; description: string };
              const d = fm.dateUpdated ?? fm.dateCreated ?? fm.date;
              return d ? new Date(d).toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric'
              }) : '';
            })()}
          </div>
        </article>
      ))}
    </div>
    <div class="mt-8">
      <a href={`${base}essays`} class="text-blue-600 dark:text-blue-400 hover:underline">
        View all essays →
      </a>
    </div>
  </section>
</MainLayout>

<style>
  h1 {
    color: orange;
  }
</style>
