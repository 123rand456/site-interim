<style>
  /* Enhanced mobile-friendly styles */
  summary {
    background: #ff9900;
    color: #fff;
    padding: 0.75rem 1rem;
    font-size: 1.125rem;
    font-weight: 500;
    border-radius: 0.375rem 0.375rem 0 0;
    cursor: pointer;
    /* Ensure touch targets are at least 44px high for mobile accessibility */
    min-height: 44px;
    display: flex;
    align-items: center;
  }

  details {
    margin-bottom: 0.5rem;
    border-radius: 0.375rem;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(20, 82, 20, 0.08);
  }

  details[open] > summary {
    border-bottom: 1px solid #e5e7eb;
  }

  /* Fix for nested summary elements - ensure they maintain proper background */
  details details summary {
    background: #f59e0b; /* orange theme for light mode */
    color: #fff; /* white text */
    border-radius: 0.375rem;
    border: 1px solid #d97706;
  }

  details details summary:hover {
    background: #d97706; /* slightly darker orange on hover */
  }

  /* Dark mode overrides for nested summaries */
  :global(.dark) details details summary {
    background: #d97706; /* darker orange for dark mode */
    color: #fff; /* white text */
    border-color: #b45309;
  }

  :global(.dark) details details summary:hover {
    background: #b45309; /* even darker orange on hover in dark mode */
  }

  /* Ensure open state maintains proper styling */
  details[open] details summary {
    background: #f59e0b; /* keep orange when expanded */
    color: #fff;
  }

  :global(.dark) details[open] details summary {
    background: #d97706; /* keep orange when expanded in dark mode */
    color: #fff;
  }

  /* Improve link styling for better mobile readability */
  .break-words a {
    word-break: break-word;
    overflow-wrap: anywhere;
    hyphens: auto;
  }

  /* Mobile-specific improvements */
  @media (max-width: 640px) {
    .break-words a {
      display: block;
      padding: 2px 0;
      line-height: 1.4;
    }

    /* Increase spacing for better touch targets on mobile */
    ul.space-y-3 li {
      margin-bottom: 0.75rem;
    }

    ul.space-y-2 li {
      margin-bottom: 0.5rem;
    }
  }

  /* Ensure nested dropdowns maintain proper spacing */
  details details {
    margin-top: 1rem;
  }

  /* Smooth transitions for better UX */
  summary {
    transition: background-color 0.2s ease-in-out;
  }
</style>
